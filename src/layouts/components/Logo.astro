---
import { Image } from "astro:assets";
import config from "@/config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block">
  {
    src || logo ? (
      <Image
        src={src || logo}
        alt={title}
        widths={[200, 300, 400]}
        sizes="(max-width: 640px) 200px, 300px"
        loading="eager"
        fetchpriority="high"
        quality={80}
        format="webp"
        width={Number(logo_width.replace("px", ""))}
        height={Number(logo_height.replace("px", ""))}
        style={{
          height: logo_height,
          width: logo_width,
        }}
      />
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
